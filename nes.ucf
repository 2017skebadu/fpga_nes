NET "VGA_RED<0>"   LOC = "F7"  | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;

NET "VGA_GREEN<3>" LOC = "C7"  | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
NET "VGA_GREEN<2>" LOC = "E8"  | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
NET "VGA_GREEN<1>" LOC = "E9"  | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
